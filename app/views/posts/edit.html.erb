<div class="page-header">
  <h1>Editing Post #<%= @post.id %></h1>
</div>

<%= form_tag(post_url(@post), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :user_id, @post.user_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :network_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :network_id, @post.network_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :category_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :category_id, @post.category_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :linked_account_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :linked_account_id, @post.linked_account_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :friend_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :friend_id, @post.friend_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :post_type, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :post_type, @post.post_type, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :comment, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :comment, @post.comment, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :link, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :link, @post.link, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :time_stamp, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :time_stamp, @post.time_stamp, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :views, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :views, @post.views, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :interactions, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :interactions, @post.interactions, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Post", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
