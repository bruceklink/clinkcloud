<div class="page-header">
  <h1>Editing Category #<%= @category.id %></h1>
</div>

<%= form_tag(category_url(@category), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :original, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :original, @category.original, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :media, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :media, @category.media, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Category", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
