<div class="page-header">
  <h1>Editing Network #<%= @network.id %></h1>
</div>

<%= form_tag(network_url(@network), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :network_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :network_name, @network.network_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :base_api_url, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :base_api_url, @network.base_api_url, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :app_secret, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :app_secret, @network.app_secret, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :app_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :app_id, @network.app_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Network", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
