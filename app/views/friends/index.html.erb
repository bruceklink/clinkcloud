<div class="page-header">
  <h1>Friends</h1>
  <p><%= link_to 'Add a New Friend', new_friend_url, class: 'btn btn-primary' %></p>
</div>


<ul class="col-md-3"> <h2>Links</h2>
<% @posts.each do |p| %>
  <% if p["type"] == "link" %>
  <li>
    <%= p["from"]["name"] %> :
    <%= p["message"] %> 
    <a href="<%= p["link"] %>"><%= p["caption"] %></a>
  </li>
  <% end %>
<% end %>
</ul>

<ul class="col-md-3"> <h2>Photos</h2>
<% @posts.each do |p| %>
  <% if p["type"] == "photo" %>
  <li>
    <%= p["from"]["name"] %> : <%= p["message"] %> 
  </li>
    <img src="<%= p["picture"] %>" width="150">
    </img>
  
  <% end %>
<% end %>
</ul>

