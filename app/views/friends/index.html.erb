<div class="page-header">
  <h1>Friends</h1>
</div>

<p><%= link_to 'Add a New Friend', new_friend_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Network</th>
      <th>Network username</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.user_id %></td>
        <td><%= friend.network_id %></td>
        <td><%= friend.network_username %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, friend_url(friend), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_friend_url(friend), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, friend_url(friend), method: 'delete', data: { confirm: "Do you really want to delete this friend?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

