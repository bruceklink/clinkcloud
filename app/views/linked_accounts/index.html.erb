<div class="page-header">
  <h1>Linked accounts</h1>
</div>

<p><%= link_to 'Add a New Linked Account', new_linked_account_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Network</th>
      <th>Linked account username</th>
      <th>Linked account password</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @linked_accounts.each do |linked_account| %>
      <tr>
        <td><%= linked_account.user_id %></td>
        <td><%= linked_account.network_id %></td>
        <td><%= linked_account.linked_account_username %></td>
        <td><%= linked_account.linked_account_password %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, linked_account_url(linked_account), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_linked_account_url(linked_account), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, linked_account_url(linked_account), method: 'delete', data: { confirm: "Do you really want to delete this linked_account?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

