<div class="page-header">
  <h1>Editing Linked Account #<%= @linked_account.id %></h1>
</div>

<%= form_tag(linked_account_url(@linked_account), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :user_id, @linked_account.user_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :network_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :network_id, @linked_account.network_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :linked_account_username, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :linked_account_username, @linked_account.linked_account_username, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :linked_account_password, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :linked_account_password, @linked_account.linked_account_password, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Linked Account", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
